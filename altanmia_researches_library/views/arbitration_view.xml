<?xml version="1.0"?>
<odoo>
    <record id="arbitration_view_list" model="ir.ui.view">
            <field name="name">arbitration list</field>
            <field name="model">researches.arbitration</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="arbitrator"/>
                    <field name="rate"/>
                    <field name="opinion"/>
                </tree>
            </field>
    </record>

    <record id="arbitration_view_form" model="ir.ui.view">
        <field name="name">arbitration form</field>
        <field name="model">researches.arbitration</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="arbitrator" />
                        <field name="rate" />
                        <field name="opinion" placeholder="Enter / for formatting" options="{'resizable':true}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>